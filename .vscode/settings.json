{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.vs": true,
        "**/.venv": true,
        "**/build": true,
        "**/dist": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "autopep8.args": [
        "--indent-size=4",
        "--max-line-length=120",
        "--aggressive"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "cSpell.language": "en,ru",
    "cSpell.dictionaries": ["russian"],
    "cSpell.words": [
        "backface",
        "bottomy",
        "centerpos",
        "centerx",
        "centery",
        "collidepoint",
        "collidepoints",
        "colliderect",
        "cooldown",
        "damageables",
        "difx",
        "dify",
        "Dinamic",
        "DOUBLEBUF",
        "guids",
        "JOYBUTTONDOWN",
        "JOYDEVICEADDED",
        "JOYDEVICEREMOVED",
        "KEYUP",
        "leftx",
        "MODELVIEW",
        "MULTISAMPLE",
        "multisampling",
        "nbytes",
        "ndarray",
        "ndenumerate",
        "OPENGL",
        "Parameteri",
        "Programiv",
        "rightx",
        "Scancode",
        "Shaderiv",
        "shcore",
        "texid",
        "topy",
        "Translatef",
        "verts",
        "VIDEORESIZE"
    ],
    "python.testing.pytestArgs": [
        ".",    // path to search unit tests
        "-rP",  // additional output for unit tests
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}