{
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.vs": true,
        "**/.venv": true,
        "**/build": true,
        "**/dist": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "autopep8.args": [
        "--indent-size=4",
        "--max-line-length=120",
        "--aggressive"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "cSpell.language": "en,ru",
    "cSpell.dictionaries": ["russian"],
    "cSpell.words": [
        "centerx",
        "centery",
        "collidepoints",
        "colliderect",
        "difx",
        "dify",
        "DOUBLEBUF",
        "ndenumerate",
        "OPENGL",
        "Scancode",
        "Translatef",
        "VIDEORESIZE"
    ],
    "python.testing.pytestArgs": [
        ".",    // path to search unit tests
        "-rP",  // additional output for unit tests
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true
}